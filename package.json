{
  "name": "room-planner",
  "version": "0.0.0",
  "scripts": {
    "preinstall": "npx --yes only-allow pnpm",
    "ng": "ng",
    "start": "ng serve room-planner-app",
    "build": "ng build room-planner-app",
    "watch": "ng build room-planner-app --watch --configuration development",
    "test": "ng test room-planner-lib",
    "test:ci": "ng test room-planner-lib --watch=false --browsers=ChromeHeadlessCI",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "format": "prettier --check .",
    "format:fix": "pnpm run lint:fix && prettier --write .",
    "prepare": "husky install",
    "pre-commit": "ng lint --fix && lint-staged",
    "build:lib": "ng build room-planner-lib",
    "test:lib": "ng test room-planner-lib",
    "pack:lib": "pnpm run build:lib && cd dist/room-planner-lib && pnpm pack",
    "publish:lib": "pnpm run build:lib && cd dist/room-planner-lib && npm publish",
    "version:patch": "npm version patch && pnpm run publish:lib",
    "version:minor": "npm version minor && pnpm run publish:lib",
    "version:major": "npm version major && pnpm run publish:lib",
    "build:sample": "ng build room-planner-app",
    "serve:sample": "ng serve room-planner-app",
    "test:sample": "ng test room-planner-app",
    "install:lib-in-sample": "pnpm run build:lib && cd projects/room-planner-app && npm install ../../dist/room-planner-lib"
  },
  "dependencies": {
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.11",
    "@angular-eslint/builder": "20.1.1",
    "@angular/cli": "^19.2.11",
    "@angular/compiler-cli": "^19.2.0",
    "@eslint/js": "^9.29.0",
    "@tailwindcss/postcss": "^4.1.10",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "20.1.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.29.0",
    "husky": "^9.1.7",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.1.2",
    "ng-packagr": "^19.2.0",
    "postcss": "^8.5.5",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.10",
    "typescript": "~5.7.2",
    "typescript-eslint": "8.34.1"
  },
  "lint-staged": {
    "*.{ts,html,js,css,scss,md,json}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@8.15.9+sha512.499434c9d8fdd1a2794ebf4552b3b25c0a633abcee5bb15e7b5de90f32f47b513aca98cd5cfd001c31f0db454bc3804edccd578501e4ca293a6816166bbd9f81"
}
